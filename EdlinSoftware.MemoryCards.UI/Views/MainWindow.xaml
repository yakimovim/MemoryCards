<Window x:Class="EdlinSoftware.MemoryCards.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:val="clr-namespace:EdlinSoftware.MemoryCards.UI.Views.Support.Validation"
        Title="{Binding Source={StaticResource localResources}, Path=Title}" 
        Icon="/EdlinSoftware.MemoryCards;component/Images/App.png"
        WindowStartupLocation="CenterScreen"
        Height="206" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="20">
            <TextBlock Text="{Binding Source={StaticResource localResources}, Path=EnterYourName}" />
            <TextBox>
                <TextBox.Text>
                    <Binding Path="Name" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                        <Binding.ValidationRules>
                            <val:StringNotEmptyRule/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
        </StackPanel>
        <Button Grid.Row="1" Content="{Binding Source={StaticResource localResources}, Path=ClickMe}" Command="{Binding SayHello}" Margin="20"/>
    </Grid>
</Window>
